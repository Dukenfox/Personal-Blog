<%- include("partials/header.ejs") -%>

<h1>Compose</h1>

<form class="blogEntry" action="/compose" method="post">
  <div class="form-group">
    <label class="font-weight-bold">Title</label>
    <input class="form-control" name="blogTitle"></input>
  </div>
  <div class="form-group">
    <label class="font-weight-bold">Post</label>
    <textarea class="form-control" name="blogEntry" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>


